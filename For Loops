// Example 1:  
/*Output: 1 
          2 
          3 
          4 
          5*/ 

#include <iostream> 
using namespace std;  

int main() 
{ 
    for(int index = 1; int index <= 5; index++)   // index is set to 1. While index is <= 5, the code below will run. After each loop, index will increment. 
    { 
        cout << index << endl;  
    } 
    
    return 0; 
} 

 
// Example 2:  
/*Output: 1 
          2 
          5 
          7 
          3*/ 

#include <iostream> 
using namespace std;  

int main() 
{ 
    int nums[] = {1, 2, 5, 7, 3}; 
    
    for(int index = 0; int index < 5; index++) 
    { 
        cout << nums[index] << endl;   // Each index position in the array will be displayed.  
    } 
    
    return 0; 
} 


// Example 3:  
// The following code will allow to raise one number to the power of another number.   
// Output: 8 

#include <iostream> 
#include <cmath>
using namespace std;  

int power(int baseNum, int powNum)    
{ 
    int result = 1;  
    
    for(int i = 0; i < powNum; i++)   // 1 will be multiplied by baseNum as long as variable i is less than powNum.
    { 
        result = result * baseNum   // The result is equal to 1 * baseNum as many times as what powNum is equal to.  
    } 
    return result;  
} 
    
int main() 
{ 
    cout << power(2, 3);   // 2 will be raised to the power of 3.  
    
    return 0; 
} 
